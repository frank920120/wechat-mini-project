}
.tabs_title {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx 0;
}
.title_item {
  flex: 1;
  text-align: center;
}
.active {
  color: var(--themeColor);
  border-bottom: 5rpx solid currentColor;
}

